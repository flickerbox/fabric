{
  "name": "@flickerbox/fabric",
  "version": "22.2.2",
  "description": "An unopinionated framework that works within your existing workflow to cut down on repetitive tasks.",
  "scripts": {
    "production": "webpack --config=config/webpack.prod.js --info-verbosity verbose --progress && npm run delete-maps",
    "development": "webpack --config=config/webpack.dev.js --info-verbosity verbose --progress",
    "development-dashboard": "webpack-dashboard -- npm run development",
    "delete-maps": "find ./ -name '*.map' -delete",
    "help": "flickerbox-build -- help",
    "version-check": "flickerbox-build -- version-check",
    "commands": "npm run help",
    "dev": "npm run development",
    "dev-dashboard": "npm run development-dashboard",
    "prod": "npm run production",
    "watch": "npm run development"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/flickerbox/fabric"
  },
  "author": "Flickerbox <dev@flickerbox.com> (https://www.flickerbox.com)",
  "license": "CC-BY-SA-4.0",
  "bugs": {
    "url": "https://github.com/flickerbox/fabric/issues"
  },
  "keywords": [
    "css",
    "sass",
    "scss"
  ],
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "path": "^0.12.7"
  },
  "devDependencies": {
    "stylelint": "^13.0.0"
  }
}
